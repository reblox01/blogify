{% extends 'admin/layout.html.twig' %}

{% block title %}Admin Profile - Blogify
{% endblock %}

{% block admin_content %}
	<div class="max-w-4xl mx-auto">
		<div class="mb-8">
			<h1 class="text-2xl font-bold text-gray-900">Your Profile</h1>
			<p class="text-gray-500 text-sm mt-1">Manage your administrator account details</p>
		</div>

		<div class="bg-white border border-gray-200 rounded-2xl shadow-sm overflow-hidden">
			<div class="px-8 py-10">
				<form action="{{ path('admin_profile') }}" method="POST" class="space-y-8">
					<div
						class="flex flex-col md:flex-row gap-10 items-start">
						{# Avatar Placeholder/Upload #}
						<div class="w-full md:w-1/3 flex flex-col items-center">
							<div class="relative group">
								<div class="w-32 h-32 rounded-full bg-teal-100 flex items-center justify-center border-4 border-white shadow-md overflow-hidden">
									<span class="text-4xl font-bold text-teal-600">{{ user.name|first|upper }}</span>
								</div>
								<button type="button" class="absolute bottom-1 right-1 p-2 bg-white border border-gray-200 rounded-full shadow-sm hover:bg-gray-50 transition-colors">
									<i data-lucide="camera" class="w-4 h-4 text-gray-600"></i>
								</button>
							</div>
							<p class="text-xs text-gray-400 mt-4 text-center italic leading-relaxed">Administrator Avatar</p>
						</div>

						{# Form Fields #}
						<div class="w-full md:w-2/3 space-y-6">
							<div class="grid grid-cols-1 gap-6">
								<div class="form-control">
									<label class="label">
										<span class="label-text font-bold text-gray-700">Full Name</span>
									</label>
									<input type="text" name="name" value="{{ user.name }}" class="input input-bordered focus:border-teal-500 rounded-xl" required>
								</div>

								<div class="form-control">
									<label class="label">
										<span class="label-text font-bold text-gray-700">Email Address</span>
									</label>
									<input type="email" value="{{ user.email }}" class="input input-bordered bg-gray-50 text-gray-400 rounded-xl" disabled>
									<label class="label">
										<span class="label-text-alt text-gray-400 italic">Email cannot be changed for admins</span>
									</label>
								</div>

								<div class="form-control">
									<label class="label">
										<span class="label-text font-bold text-gray-700">Biography</span>
									</label>
									<textarea name="biography" class="textarea textarea-bordered h-32 focus:border-teal-500 rounded-xl">{{ user.biography }}</textarea>
								</div>

								<div class="divider"></div>

								<div class="form-control">
									<label class="label">
										<span class="label-text font-bold text-gray-700">Update Password</span>
									</label>
									<input type="password" name="password" placeholder="Leave blank to keep current" class="input input-bordered focus:border-teal-500 rounded-xl">
								</div>
							</div>
						</div>
					</div>

					<div class="flex justify-end gap-3 pt-6 border-t border-gray-100">
						<button type="submit" class="btn btn-primary bg-teal-600 border-none hover:bg-teal-700 text-white rounded-xl px-10">
							Save Changes
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
