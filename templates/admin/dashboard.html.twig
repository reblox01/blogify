{% extends 'admin/layout.html.twig' %}

{% block title %}Admin Dashboard
{% endblock %}

{% block admin_content %}
	<div class="mb-8">
		<h1 class="text-2xl font-bold text-gray-900">Dashboard</h1>
		<p class="text-gray-500 text-sm mt-1">Overview of your platform's performance</p>
	</div>

	{# Stats Grid #}
	<div
		class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
		{# Users Card #}
		<div class="bg-white rounded-xl border border-gray-200 p-6 shadow-sm hover:shadow-md transition-shadow">
			<div class="flex items-start justify-between">
				<div>
					<p class="text-sm font-medium text-gray-500">Total Users</p>
					<h3 class="text-3xl font-bold text-gray-900 mt-2">{{ totalUsers }}</h3>
				</div>
				<div class="p-3 bg-blue-50 bg-opacity-50 rounded-lg">
					<i data-lucide="users" class="w-6 h-6 text-blue-600"></i>
				</div>
			</div>
			<div class="mt-4 flex items-center text-sm text-green-600">
				<i data-lucide="trending-up" class="w-4 h-4 mr-1"></i>
				<span class="font-medium">+12%</span>
				<span class="text-gray-400 ml-1">from last month</span>
			</div>
		</div>

		{# Posts Card #}
		<div class="bg-white rounded-xl border border-gray-200 p-6 shadow-sm hover:shadow-md transition-shadow">
			<div class="flex items-start justify-between">
				<div>
					<p class="text-sm font-medium text-gray-500">Total Posts</p>
					<h3 class="text-3xl font-bold text-gray-900 mt-2">{{ totalPosts }}</h3>
				</div>
				<div class="p-3 bg-purple-50 bg-opacity-50 rounded-lg">
					<i data-lucide="file-text" class="w-6 h-6 text-purple-600"></i>
				</div>
			</div>
			<div class="mt-4 flex items-center text-sm text-green-600">
				<i data-lucide="trending-up" class="w-4 h-4 mr-1"></i>
				<span class="font-medium">+5%</span>
				<span class="text-gray-400 ml-1">new today</span>
			</div>
		</div>

		{# Pending Card #}
		<div class="bg-white rounded-xl border border-gray-200 p-6 shadow-sm hover:shadow-md transition-shadow">
			<div class="flex items-start justify-between">
				<div>
					<p class="text-sm font-medium text-gray-500">Pending Review</p>
					<h3 class="text-3xl font-bold text-gray-900 mt-2">{{ pendingPosts }}</h3>
				</div>
				<div class="p-3 bg-amber-50 bg-opacity-50 rounded-lg">
					<i data-lucide="clock" class="w-6 h-6 text-amber-600"></i>
				</div>
			</div>
			<p class="mt-4 text-sm text-amber-600 font-medium">Needs attention</p>
		</div>

		{# Published Card #}
		<div class="bg-white rounded-xl border border-gray-200 p-6 shadow-sm hover:shadow-md transition-shadow">
			<div class="flex items-start justify-between">
				<div>
					<p class="text-sm font-medium text-gray-500">Published</p>
					<h3 class="text-3xl font-bold text-gray-900 mt-2">{{ publishedPosts }}</h3>
				</div>
				<div class="p-3 bg-green-50 bg-opacity-50 rounded-lg">
					<i data-lucide="check-circle-2" class="w-6 h-6 text-green-600"></i>
				</div>
			</div>
			<p class="mt-4 text-sm text-gray-400">All time</p>
		</div>
	</div>

	{# Recent Activity / Table #}
	<div class="bg-white border border-gray-200 rounded-xl shadow-sm overflow-hidden">
		<div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center bg-gray-50/50">
			<h3 class="font-semibold text-gray-900">Recent Posts</h3>
			<a href="{{ path('admin_posts') }}" class="text-sm font-medium text-teal-600 hover:text-teal-700 hover:underline">View All</a>
		</div>
		<div class="overflow-x-auto">
			<table class="w-full text-left text-sm text-gray-600">
				<thead class="bg-gray-50 text-gray-500 uppercase text-xs font-semibold">
					<tr>
						<th class="px-6 py-3">Title</th>
						<th class="px-6 py-3">Author</th>
						<th class="px-6 py-3">Status</th>
						<th class="px-6 py-3">Date</th>
						<th class="px-6 py-3 text-right">Actions</th>
					</tr>
				</thead>
				<tbody class="divide-y divide-gray-100">
					{% for post in recentPosts %}
						<tr class="hover:bg-gray-50 transition-colors">
							<td class="px-6 py-4 font-medium text-gray-900">{{ post.title }}</td>
							<td class="px-6 py-4">
								<div class="flex items-center gap-2">
									<div class="avatar placeholder">
										<div class="bg-neutral-focus text-neutral-content rounded-full w-6 h-6 bg-gray-200">
											<span class="text-xs text-gray-600">{{ post.user.email|first|upper }}</span>
										</div>
									</div>
									<span>{{ post.user.name }}</span>
								</div>
							</td>
							<td class="px-6 py-4">
								{% if post.status == 'published' %}
									<span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-green-50 text-green-700 border border-green-100">
										<span class="w-1.5 h-1.5 rounded-full bg-green-600"></span>
										Published
									</span>
								{% elseif post.status == 'draft' %}
									<span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-amber-50 text-amber-700 border border-amber-100">
										<span class="w-1.5 h-1.5 rounded-full bg-amber-600"></span>
										Draft
									</span>
								{% else %}
									<span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-red-50 text-red-700 border border-red-100">
										<span class="w-1.5 h-1.5 rounded-full bg-red-600"></span>
										Rejected
									</span>
								{% endif %}
							</td>
							<td class="px-6 py-4 text-gray-400">{{ post.createdAt|date("M d, Y") }}</td>
							<td class="px-6 py-4 text-right">
								<a href="{{ path('admin_post_preview', {id: post.id}) }}" class="btn btn-ghost btn-xs">View</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="5" class="px-6 py-8 text-center text-gray-400 italic">No posts found.</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
