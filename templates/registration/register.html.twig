{% extends 'base.html.twig' %}

{% block body %}
    <div class="max-w-md mx-auto bg-white rounded shadow p-6">
        <h1 class="text-2xl font-bold mb-4">Create account</h1>
        {{ form_start(registrationForm, {'attr': {'id': 'register-form', 'novalidate': 'novalidate'}}) }}
            <div class="space-y-4">
                {{ form_row(registrationForm.name, {'attr': {'class': 'mt-1 block w-full rounded border-gray-300'}}) }}
                {{ form_row(registrationForm.email, {'attr': {'class': 'mt-1 block w-full rounded border-gray-300'}}) }}
                {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'mt-1 block w-full rounded border-gray-300'}}) }}
            </div>
            <div class="mt-4">
                <button class="bg-green-600 text-white px-4 py-2 rounded" type="submit">Register</button>
            </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}

