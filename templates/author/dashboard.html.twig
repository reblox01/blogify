{% extends 'author/layout.html.twig' %}

{% block title %}My Dashboard{% endblock %}

{% block author_content %}
    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">My Posts</h1>
            <p class="text-gray-500 text-sm mt-1">Manage your blog content</p>
        </div>
        <a href="{{ path('author_post_new') }}" class="btn bg-teal-600 hover:bg-teal-700 text-white border-none gap-2">
            <i data-lucide="plus" class="w-4 h-4"></i> New Post
        </a>
    </div>

    {# Stats Row #}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white p-4 rounded-xl border border-gray-200 shadow-sm flex items-center justify-between">
            <div>
                 <p class="text-xs text-uppercase text-gray-400 font-bold tracking-wider">PUBLISHED</p>
                 <p class="text-2xl font-bold text-gray-900 mt-1">{{ publishedCount }}</p>
            </div>
            <div class="p-2 bg-green-50 rounded text-green-600">
                <i data-lucide="check-circle" class="w-5 h-5"></i>
            </div>
        </div>
         <div class="bg-white p-4 rounded-xl border border-gray-200 shadow-sm flex items-center justify-between">
            <div>
                 <p class="text-xs text-uppercase text-gray-400 font-bold tracking-wider">DRAFTS</p>
                 <p class="text-2xl font-bold text-gray-900 mt-1">{{ draftCount }}</p>
            </div>
            <div class="p-2 bg-amber-50 rounded text-amber-600">
                <i data-lucide="edit-3" class="w-5 h-5"></i>
            </div>
        </div>
         <div class="bg-white p-4 rounded-xl border border-gray-200 shadow-sm flex items-center justify-between">
            <div>
                 <p class="text-xs text-uppercase text-gray-400 font-bold tracking-wider">REJECTED</p>
                 <p class="text-2xl font-bold text-gray-900 mt-1">{{ rejectedCount }}</p>
            </div>
            <div class="p-2 bg-red-50 rounded text-red-600">
                <i data-lucide="x-circle" class="w-5 h-5"></i>
            </div>
        </div>
    </div>

    {# Filter Tabs (Mockup) #}
    <div class="border-b border-gray-200 mb-6">
        <nav class="-mb-px flex space-x-8" aria-label="Tabs">
            <a href="#" class="border-teal-500 text-teal-600 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
                All Posts
            </a>
            <a href="#" class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
                Published
            </a>
            <a href="#" class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
                Drafts
            </a>
        </nav>
    </div>

    {# Posts List #}
    <div class="bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden">
        <table class="w-full text-left text-sm text-gray-600">
            <thead class="bg-gray-50 text-gray-500 uppercase text-xs font-semibold">
                <tr>
                    <th class="px-6 py-3 w-10">
                        <input type="checkbox" class="checkbox checkbox-xs rounded border-gray-300">
                    </th>
                    <th class="px-6 py-3">Post</th>
                    <th class="px-6 py-3">Status</th>
                    <th class="px-6 py-3">Date</th>
                    <th class="px-6 py-3 text-right">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
                {% for post in posts %}
                    <tr class="hover:bg-gray-50 transition-colors group">
                        <td class="px-6 py-4">
                             <input type="checkbox" class="checkbox checkbox-xs rounded border-gray-300">
                        </td>
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-4">
                                {% if post.imageData %}
                                    <div class="w-10 h-10 rounded overflow-hidden bg-gray-100 flex-shrink-0">
                                        <img src="{{ path('post_image', {id: post.id}) }}" class="w-full h-full object-cover">
                                    </div>
                                {% elseif post.imagePath %}
                                    <div class="w-10 h-10 rounded overflow-hidden bg-gray-100 flex-shrink-0">
                                        <img src="{{ asset('images/' ~ post.imagePath) }}" class="w-full h-full object-cover">
                                    </div>
                                {% else %}
                                    <div class="w-10 h-10 rounded bg-gray-100 flex-shrink-0 flex items-center justify-center text-gray-400">
                                        <i data-lucide="image" class="w-5 h-5"></i>
                                    </div>
                                {% endif %}
                                <span class="font-medium text-gray-900 line-clamp-1">{{ post.title }}</span>
                            </div>
                        </td>
                        <td class="px-6 py-4">
                             {% if post.status == 'published' %}
                                <span class="badge badge-sm badge-success gap-1 text-white border-none bg-green-500">
                                    Published
                                </span>
                            {% elseif post.status == 'draft' %}
                                <span class="badge badge-sm badge-warning gap-1 text-white border-none bg-amber-500">
                                    Draft
                                </span>
                            {% else %}
                                <span class="badge badge-sm badge-error gap-1 text-white border-none bg-red-500">
                                    Rejected
                                </span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 text-gray-400">{{ post.createdAt|date("M d, Y") }}</td>
                        <td class="px-6 py-4 text-right">
                            <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                <a href="{{ path('author_post_edit', {id: post.id}) }}" class="btn btn-square btn-ghost btn-sm text-gray-500 hover:text-teal-600">
                                    <i data-lucide="edit-2" class="w-4 h-4"></i>
                                </a>
                                 <form action="{{ path('author_post_delete', {id: post.id}) }}" method="POST" onsubmit="return confirm('Are you sure?');" class="inline">
                                    <button type="submit" class="btn btn-square btn-ghost btn-sm text-gray-500 hover:text-red-600">
                                        <i data-lucide="trash-2" class="w-4 h-4"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="px-6 py-12 text-center">
                            <div class="flex flex-col items-center justify-center text-gray-400">
                                <i data-lucide="file-x" class="w-12 h-12 mb-3 bg-gray-50 p-2 rounded-full"></i>
                                <span class="font-medium">No posts found</span>
                                <a href="{{ path('author_post_new') }}" class="text-teal-600 text-sm mt-2 hover:underline">Create your first post</a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
