{% extends 'author/layout.html.twig' %}

{% block title %}Edit Post{% endblock %}

{% block author_content %}
    <div class="max-w-3xl mx-auto">
        <div class="mb-8">
            <a href="{{ path('author_dashboard') }}" class="text-sm text-gray-500 hover:text-teal-600 flex items-center gap-1 mb-2">
                <i data-lucide="arrow-left" class="w-4 h-4"></i> Back to Dashboard
            </a>
            <h1 class="text-2xl font-bold text-gray-900">Edit Post</h1>
        </div>

        <div class="bg-white">
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            
            <div class="form-control w-full">
                <label class="label">
                    <span class="label-text font-medium text-gray-700">Title</span>
                </label>
                {{ form_widget(form.title, {'attr': {'class': 'input input-bordered w-full focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent'}}) }}
                <div class="text-red-500 text-sm">{{ form_errors(form.title) }}</div>
            </div>

            <div class="form-control w-full">
                <label class="label">
                    <span class="label-text font-medium text-gray-700">Description</span>
                </label>
                {{ form_widget(form.description, {'attr': {'class': 'textarea textarea-bordered h-48 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent'}}) }}
                <div class="text-red-500 text-sm">{{ form_errors(form.description) }}</div>
            </div>

            {% if post.imagePath %}
            <div class="mb-4">
                 <label class="label">
                    <span class="label-text font-medium text-gray-700">Current Image</span>
                </label>
                <img src="{{ asset('images/' ~ post.imagePath) }}" class="w-48 h-32 object-cover rounded-lg border border-gray-200">
            </div>
            {% endif %}

            <div class="form-control w-full">
                <label class="label">
                    <span class="label-text font-medium text-gray-700">Change Cover Image</span>
                </label>
                {{ form_widget(form.imageFile, {'attr': {'class': 'file-input file-input-bordered w-full focus:outline-none focus:ring-2 focus:ring-teal-500'}}) }}
                <div class="text-red-500 text-sm">{{ form_errors(form.imageFile) }}</div>
            </div>

            <div class="flex items-center justify-end gap-3 pt-6 border-t border-gray-100 mt-8">
                <a href="{{ path('author_dashboard') }}" class="btn btn-ghost hover:bg-gray-100 text-gray-600">Cancel</a>
                <button type="submit" class="btn bg-teal-600 hover:bg-teal-700 text-white border-none min-w-[120px]">
                    Save Changes
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
