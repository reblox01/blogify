{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mx-auto py-8">
        <h1 class="text-3xl font-bold mb-6">Blog</h1>
        <div class="grid grid-cols-1 gap-6">
            {% for post in posts %}
                <article class="p-4 border rounded">
                    <h2 class="text-2xl"><a href="{{ path('blog_show', {slug: post.slug}) }}">{{ post.title }}</a></h2>
                    <p class="text-sm text-gray-600">By {{ post.user.name ?? 'Unknown' }} â€” {{ post.createdAt ? post.createdAt|date('Y-m-d') : '' }}</p>
                </article>
            {% else %}
                <p>No posts found.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}

