<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ app_name|default('.Blog') }}</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="icon" href="{{ asset('icons/favicon.ico') }}">
    {# Tailwind via CDN for quick styling #}
    <script src="https://cdn.tailwindcss.com"></script>
    {# Include optional local JS (validation, small UI helpers) #}
    <script src="{{ asset('js/validation.js') }}" defer></script>
</head>
<body class="bg-gray-100 h-screen antialiased leading-none font-sans">
    <header class="bg-gray-800 py-6">
        <div class="container mx-auto flex justify-between items-center px-6">
            <div>
                <a href="{{ path('app_home') }}" class="no-underline">
                    <img src="{{ asset('logo/logo.png') }}" alt="{{ app_name|default('.Blog') }}" class="h-10">
                </a>
            </div>
            <nav class="space-x-4 text-gray-300 text-sm sm:text-base">
                <a class="no-underline hover:underline" href="{{ path('app_home') }}">Home</a>
                <a class="no-underline hover:underline" href="{{ path('blog_index') }}">Blog</a>
                {% if app.user %}
                    <span>{{ app.user.username ?? app.user.email }}</span>
                {% else %}
                    <a class="no-underline hover:underline" href="{{ path('app_login') }}">Sign In</a>
                    <a class="no-underline hover:underline" href="{{ path('app_register') }}">Sign Up</a>
                {% endif %}
            </nav>
        </div>
    </header>

    <div class="min-h-screen">
        <div class="container mx-auto px-4 py-6">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="mb-4 p-3 rounded {{ label == 'error' ? 'bg-red-100 text-red-800' : 'bg-green-100 text-green-800' }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </div>
    </div>

    <footer>
        {% include 'layouts/footer.html.twig' ignore missing %}
    </footer>
</body>
</html>
